<?xml version="1.0"?>
<!-- Launches an UVC camera, the ball detector and its visualization  -->
<launch>
  <!-- robotis op3 manager -->
  <include file="$(find-pkg-share op3_manager)/launch/op3_manager.launch.py"/> 

  <!-- Camera and Ball detector -->
  <include file="$(find-pkg-share op3_ball_detector)/launch/ball_detector_from_usb_cam.launch.py"/> 
   
  <!-- face tracking -->
  <include file="$(find-pkg-share op3_demo)/launch/face_detection_op3.launch.py" />

  <!-- camera setting tool -->
  <include file="$(find-pkg-share op3_camera_setting_tool)/launch/op3_camera_setting_tool.launch.py" />
    
  <!-- sound player -->
  <node pkg="ros_madplay_player" exec="ros_madplay_player" name="ros_madplay_player" output="screen"/>
    
  <!-- web setting -->
  <include file="$(find-pkg-share op3_web_setting_tool)/launch/web_setting_server.launch.py" />
    
  <!-- robotis op3 self test demo -->
  <node pkg="op3_demo" exec="self_test_node" name="op3_self_test" output="screen">
    <param name="grass_demo" value="False" />
    <param name="p_gain" value="0.45" />
    <param name="d_gain" value="0.045" />
  </node>
</launch>
